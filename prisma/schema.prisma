// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id       String @id @default(uuid())
  nom      String @unique
  email    String @unique
  password String
  role     Role   @default(AUTHOR)

  Articles     Article[]
  RefreshToken RefreshToken?
}

model Article {

  id        Int      @id @default(autoincrement())
  titre     String
  contenu   String   @db.LongText
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  published Boolean  @default(false)

  authorId String
  author   Utilisateur @relation(fields: [authorId], references: [id])

  categories  CategoriesOnArticles[]
  commentaire Commentaire[]
}

model Categorie {
  id       Int                    @id @default(autoincrement())
  nom      String
  Articles CategoriesOnArticles[]
}

model CategoriesOnArticles {

  articleId   Int
  categorieId Int

  article   Article   @relation(fields: [articleId], references: [id])
  categorie Categorie @relation(fields: [categorieId], references: [id])

  @@id([articleId, categorieId])
}

model Commentaire {
  id        Int     @id @default(autoincrement())
  email     String
  contenu   String  @db.LongText
  articleId Int
  article   Article @relation(fields: [articleId], references: [id])
}

model RefreshToken {
  id        String      @id @default(uuid())
  expiredIn Int
  user      Utilisateur @relation(fields: [userId], references: [id])
  userId    String      @unique
}

enum Role {
  USER
  ADMIN
  AUTHOR
}
